[init]
  defaultBranch = main

[color]
  ui = true

[color "status"]
  added = green
  changed = yellow
  untracked = red

[core]
	excludesfile = ~/.config/git/ignore

[rerere]
  enabled = true

[commit]
  verbose = true

[push]
  default = current

[pull]
	rebase = true

[user]
	name = {{ .name }}
	email = {{ .email }}

[github]
  user = jussapaavo

{{ if (eq .is_codespace true) -}}
# For Github Codespaces
[includeIf "gitdir:**/workspaces/*/"]
	path = ~/.config/git/dagmar
{{ end -}}

{{ if (eq .chezmoi.os "darwin") -}}
[includeIf "gitdir:**/Dagmar/*/"]
	path = ~/.config/git/dagmar

[credential]
  helper = osxkeychain
{{ end -}}